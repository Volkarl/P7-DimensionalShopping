@page
@using System.Globalization
@using DimensionalPriceRunner
@using Microsoft.AspNetCore.Hosting.Internal
@using Microsoft.CodeAnalysis.CSharp.Syntax
@model DimensionalPriceRunner.Pages.IndexModel


@using Microsoft.AspNetCore.Http;


<!doctype html>
<html lang="en">

<!-- Page Head -->
<head>
    <!-- Font Awesome -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">


    <style>
        .modal-open {
            position: fixed;
            overflow: scroll;
            width: 100%;
            padding-right: 0!important;
        }

    </style>

</head>





<body>



    <!-- Page Content -->
    <div class="container">

        <!-- Logo & Search Bar  -->
        <div class="container" style="margin-top: @Model.SearchBarMarginTop%;" id="search-bar">
            <div class="my-4">
                <div class="row">
                    <div id="logo" class="text-center">
                        <h1>DimensionalShopping</h1><p><i class="fa fa-plane"></i> Flight Links Only</p>
                    </div>
                    <form method="post" role="form" id="form-buscar" style="width: 80%; margin-left: 10%">
                        <div class="form-group">
                            <div class="input-group">
                                <input id="search-input" class="form-control" type="url" name="search" placeholder="Flight url..." required value="@ViewData["search-input"]" />
                                <span class="input-group-btn">
                                    <button class="btn btn-success" type="submit" style="z-index: 1">
                                        <i class="fa fa-search" aria-hidden="true" style="font-size:larger"> Search</i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>



        <!-- Result Container -->
        <div style="padding-bottom: 60%">
            <div class="row">
                @if (Model.Results != null)
                {
                    foreach (var result in Model.Results)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                            <div class="my-list">
                                <img src="@result.Ticket.Airline" style="width: 100%; height: auto" />
                                <div class="offer" style="width: 100%">
                                    <div class="btn; float-left" data-toggle="tooltip" data-placement="top" title="OS ToolTip">
                                        OS:
                                    </div>
                                    <span class="float-right">@result.OS</span>
                                </div>
                                <div class="offer" style="width: 100%">
                                    <div class="btn; float-left" data-toggle="tooltip" data-placement="top" title="VPNLoc ToolTip">
                                        VPN Location:
                                    </div>
                                    <span class="float-right">@result.VPNLocation</span>
                                </div>
                                <div class="offer" style="width: 100%">
                                    <div class="btn; float-left" data-toggle="tooltip" data-placement="top" title="Price ToolTip">
                                        Price:
                                    </div>
                                    <span class="float-right">@result.Ticket.Price @Program.ActiveCurrency</span>
                                </div>


                                <div class="detail">
                                    <div class="img-wrapper">
                                        <img class="img-responsive" src=@result.Ticket.Airline style="opacity: 0.7">
                                        <div class="img-overlay">
                                            <button type="button" class="btn btn-lg btn-warning" data-toggle="modal" data-target="#@result.ID">Information</button>

                                            <!-- Modal Ticket Info -->
                                            <div class="modal fade" id="@result.ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog modal-lg" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h2 class="modal-title" id="exampleModalLabel">@result.Name - @result.OS - @result.VPNLocation - @result.Ticket.Price @Program.ActiveCurrency</h2>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="row">
                                                                <div class="col-xs-12 col-sm-5 col-md-5">
                                                                    <img src="@result.Ticket.Airline" style="width: 100%; height: auto" />

                                                                    @for (int i = 0; i < Int32.Parse(result.Ticket.Rating[0]); i++)
                                                                    {
                                                                        <i class="fa fa-star"></i>
                                                                    }
                                                                    @if (Int32.Parse(result.Ticket.Rating[1]) > 4)
                                                                    {
                                                                        <i class="fa fa-star-half-o"></i>
                                                                        for (int i = Int32.Parse(result.Ticket.Rating[0]); i < 4; i++)
                                                                        {
                                                                            <i class="fa fa-star-o"></i>
                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        for (int i = Int32.Parse(result.Ticket.Rating[0]); i < 5; i++)
                                                                        {
                                                                            <i class="fa fa-star-o"></i>
                                                                        }
                                                                    }

                                                                    <div class="vl"></div>

                                                                    <h3 class="text-center font-weight-bold">OS: @result.OS</h3>
                                                                    <h3 class="text-center font-weight-bold">VPN Location: @result.VPNLocation</h3>

                                                                    <h1 class="text-primary">@result.Ticket.Price @Program.ActiveCurrency</h1>

                                                                </div>
                                                                <div class="col-xs-12 col-sm-7 col-md-7">

                                                                    <table class="table table-hover border-bottom">
                                                                        <tbody>
                                                                            <tr>
                                                                                <th class="text-left" scope="row">Airline</th>
                                                                                <td>@result.Name</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <th class="text-left" scope="row">Leg</th>
                                                                                <td>@result.Ticket.Leg</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <th class="text-left" scope="row">Takeoff Time</th>
                                                                                <td>@result.Ticket.TakeoffTime</td>
                                                                            </tr>

                                                                            <tr>
                                                                                <th class="text-left" scope="row">Flight Length</th>
                                                                                <td>@result.Ticket.FlightLength</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <th class="text-left" scope="row">Airports</th>
                                                                                <td>@result.Ticket.Airports</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <th class="text-left" scope="row">Stops</th>
                                                                                <td>@result.Ticket.Stops</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <th class="text-left" scope="row">Ticket Type</th>
                                                                                <td>@result.Ticket.TicketType</td>
                                                                            </tr>

                                                                        </tbody>
                                                                    </table>

                                                                </div>
                                                            </div>

                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                            <a class="btn btn-primary" href="@result.Ticket.TicketUrl" role="button">Goto Ticket</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>


                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    @*<script>
                            document.getElementById("search-bar").style.marginTop = "@Model.SearchBarMarginTop%";
                        </script>*@

                    <div class="container my-4">
                        <img id="no-result" class="rounded mx-auto d-block" src="@Model.NoResultImg" style="width: 25%; height: auto; margin-bottom: 3%" />
                        <h1 class="text-center">@Model.S</h1>
                        <h4 class="text-center">@Model.S2</h4>
                    </div>
                }


            </div>
        </div>
    </div>













    <!-- Footer -->
<footer class="py-3 bg-dark">
    <div class="container">





            @*<p class="m-0 text-center text-white">Copyright &copy; Your Website 2018</p>*@
        </div>
        <!-- /.container -->
    </footer>




    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</body>
</html>




