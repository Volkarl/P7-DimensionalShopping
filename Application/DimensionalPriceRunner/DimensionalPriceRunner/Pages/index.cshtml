@page
@using System.Globalization
@using System.Net.Mime
@using DimensionalPriceRunner
@using DimensionalPriceRunner.Pages
@using Microsoft.AspNetCore.Hosting.Internal
@using Microsoft.CodeAnalysis.CSharp.Syntax
@model DimensionalPriceRunner.Pages.IndexModel




@using Microsoft.AspNetCore.Http;
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@using Microsoft.EntityFrameworkCore.Query.Internal
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!doctype html>
<html lang="en">

<!-- Page Head -->
<head>
    <!-- Font Awesome -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">


    <style>
        .modal-open {
            position: fixed;
            overflow: scroll;
            width: 100%;
            padding-right: 0 !important;
        }
    </style>


    <script>
        window.onload = function () {
            switchlang(document.getElementById('dropdownMenu-language').value);
            filterSelection("all");
        };
    </script>


    <script>
        function updateCountResults(count) {
            if (document.getElementById("showUserSystemInput").checked) {
                document.getElementById("count-results-text").innerText = count;
            } else {
                @try
                {
                    @:document.getElementById("count-results-text").innerText = @Model.Results.Count();
                }
                catch (Exception e)
                {
                    @:document.getElementById("count-results-text").innerText = 0;
                }
            }
        }
    </script>


    <script>
        function toggleShowUserSystemResultsOnly() {
            if (document.getElementById("showUserSystemInput").checked) {
                filterSelection('@Model.UserOS @Model.UserLocation');
            } else {
                filterSelection('all');
            }
        }
    </script>


    <script>
        filterSelection("all");

        function filterSelection(c) {
            var x, i;
            x = document.getElementsByClassName("filterDiv");
            if (c == "all") c = "";
            for (i = 0; i < x.length; i++) {
                w3RemoveClass(x[i], "show");
                if (x[i].className.indexOf(c) > -1) w3AddClass(x[i], "show");
            }
            updateCountResults(w3RemoveClass.length);
        }

        function w3AddClass(element, name) {
            var i, arr1, arr2;
            arr1 = element.className.split(" ");
            arr2 = name.split(" ");
            for (i = 0; i < arr2.length; i++) {
                if (arr1.indexOf(arr2[i]) == -1) {
                    element.className += " " + arr2[i];
                }
            }
        }

        function w3RemoveClass(element, name) {
            var i, arr1, arr2;
            arr1 = element.className.split(" ");
            arr2 = name.split(" ");
            for (i = 0; i < arr2.length; i++) {
                while (arr1.indexOf(arr2[i]) > -1) {
                    arr1.splice(arr1.indexOf(arr2[i]), 1);
                }
            }
            element.className = arr1.join(" ");
        }

        // Add active class to the current button (highlight it)
        var btnContainer = document.getElementById("myBtnContainer");
        var btns = btnContainer.getElementsByClassName("btn");
        for (var i = 0; i < btns.length; i++) {
            btns[i].addEventListener("click",
                function() {
                    var current = document.getElementsByClassName("active");
                    current[0].className = current[0].className.replace(" active", "");
                    this.className += " active";
                });
        }
    </script>

    <script src="dist\Translate.js"></script>
    <script>
        function switchlang(clang) {
            var translate = new Translate();
            var currentLng = clang;
            var attributeName = 'data-tag';
            translate.init(attributeName, currentLng);
            translate.process();
        }
    </script>

</head>


<body>

<!-- Page Content -->
<div class="container">

<!-- Logo & Search Bar  -->
<div class="container" style="margin-top: @Model.SearchBarMarginTop%;" id="search-bar">
    <div class="my-4">
        <div class="row">
            <div id="logo" class="text-center">
                <h1>DimensionalShopping</h1>
                <p><i class="fa fa-plane"></i> Flight Links Only</p>
            </div>
            <form method="post" role="form" id="form-buscar" style="width: 80%; margin-left: 10%">
                <div class="form-group">
                    <div class="input-group">
                        <input id="search-input" class="form-control" type="url" name="search" placeholder="Flight url..." required value="@ViewData["search-input"]"/>
                        <span class="input-group-btn">
                            <button class="btn btn-success" type="submit" style="z-index: 1">
                                <i class="fa fa-search" aria-hidden="true" style="font-size: larger"> <label data-tag="search"></label></i>
                            </button>
                        </span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Result Container -->
<div id="result-container" style="padding-bottom: 60%">

    @if (Model.Results != null)
    {
        <div class="p-0 mb-0 bg-light text-black">

            @if (Model.UserOS != "" && Model.UserLocation != null)
            {
                <div>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-4 col-md-offset-2">
                                <div class="anil_nepal">
                                    <span class="font-weight-bold">Show only results based on your system:</span>
                                    <label class="switch switch-left-right">
                                        <input id="showUserSystemInput" class="switch-input" type="checkbox" value="Yes" name="testName" onclick="toggleShowUserSystemResultsOnly()">
                                        <span class="switch-label" data-on="On" data-off="Off"></span> <span class="switch-handle"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <i class="fa @Model.OSIconDictionary[Model.UserOS]" aria-hidden="true" style="font-size: larger; margin-left: 2%"> Your OS: <i class="font-weight-bold">@Model.UserOS</i></i>
                    <br/>
                    <i class="fa fa-globe" aria-hidden="true" style="font-size: larger; margin-left: 2%"> Your Location: <i class="font-weight-bold">@Model.UserLocation</i></i>

                    <i class="float-right">We found <i id="count-results-text" class="font-weight-bold"></i> results: </i>

                    @*<h1>Client IP: @HttpContextAccessor.HttpContext.Connection.RemoteIpAddress.ToString()</h1>*@

                </div>
            }
            else
            {
                <span class="font-weight-bold">We couldn't find your OS or Location, and the filter option have been disabled</span>
                <i class="float-right">We found <i class="font-weight-bold">@Model.Results.Count()</i> results: </i>
            }

        </div>
    }


    <div class="row">
        @*@if (Model.Results != null)*@
        @if (Model.Results != null)
        {
            foreach (var result in Model.Results)
            {
                <div class="filterDiv col-lg-3 col-md-4 col-sm-6 col-6 @result.OS @result.VPNLocation">
                    <div class="my-list">
                        <img src="@result.Ticket.Airline" style="width: 100%; height: auto"/>
                        <div class="offer" style="width: 100%">
                            <div class="btn; float-left" data-toggle="tooltip" data-placement="top"
                                 title="An operating system(OS) is a system software that manages your device, examples of operating systems are: Windows(7,8,10), Android, macOS(Apple devices), Linux etc.">
                                <label data-tag="os"></label>
                            </div>
                            <span class="float-right">@result.OS</span>
                        </div>
                        <div class="offer" style="width: 100%">
                            <div class="btn; float-left" data-toggle="tooltip" data-placement="top"
                                 title="A Virtual Private Network(VPN) is connection method that can be used to obtain an IP address, which websites uses to determine your location. You can thereby appear to be in another country than you currently is.">
                                <label data-tag="vpnlocation"></label>
                            </div>
                            <span class="float-right">@result.VPNLocation</span>
                        </div>
                        <div class="offer" style="width: 100%">
                            <div class="btn; float-left" data-toggle="tooltip" data-placement="top"
                                 title="Price of the flight ticket in assumption that the specified OS and VPN location are used.">
                                <label data-tag="price"></label>
                            </div>
                            <span class="float-right">@result.Ticket.Price @Program.ActiveCurrency</span>
                        </div>


                        <div class="detail">
                            <div class="img-wrapper">
                                <img class="img-responsive" src=@result.Ticket.Airline style="opacity: 0.7">
                                <div class="img-overlay">
                                    <button type="button" class="btn btn-lg btn-warning" data-toggle="modal" data-target="#@result.ID"><label data-tag="information"></label></button>

                                    <!-- Modal Ticket Info -->
                                    <div class="modal fade" id="@result.ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h2 class="modal-title" id="exampleModalLabel">@result.Name - @result.OS - @result.VPNLocation - @result.Ticket.Price @Program.ActiveCurrency</h2>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="row">
                                                        <div class="col-xs-12 col-sm-5 col-md-5">
                                                            <img src="@result.Ticket.Airline" style="width: 100%; height: auto"/>

                                                            @for (int i = 0; i < Int32.Parse(result.Ticket.Rating[0]); i++)
                                                            {
                                                                <i class="fa fa-star"></i>
                                                            }
                                                            @if (Int32.Parse(result.Ticket.Rating[1]) > 4)
                                                            {
                                                                <i class="fa fa-star-half-o"></i>
                                                                for (int i = Int32.Parse(result.Ticket.Rating[0]); i < 4; i++)
                                                                {
                                                                    <i class="fa fa-star-o"></i>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                for (int i = Int32.Parse(result.Ticket.Rating[0]); i < 5; i++)
                                                                {
                                                                    <i class="fa fa-star-o"></i>
                                                                }
                                                            }

                                                            <div class="vl"></div>

                                                            <h3 class="text-center font-weight-bold"><label data-tag="os"></label> @result.OS</h3>
                                                            <h3 class="text-center font-weight-bold"><label data-tag="vpnlocation"></label> @result.VPNLocation</h3>

                                                            <h1 class="text-primary">@result.Ticket.Price @Program.ActiveCurrency</h1>

                                                        </div>
                                                        <div class="col-xs-12 col-sm-7 col-md-7">

                                                            <table class="table table-hover border-bottom">
                                                                <tbody>
                                                                <tr>
                                                                    <th class="text-left" scope="row"><label data-tag="airline"></label></th>
                                                                    <td>@result.Name</td>
                                                                </tr>
                                                                <tr>
                                                                    <th class="text-left" scope="row"><label data-tag="leg"></label></th>
                                                                    <td>@result.Ticket.Leg</td>
                                                                </tr>
                                                                <tr>
                                                                    <th class="text-left" scope="row"><label data-tag="takeoff"></label></th>
                                                                    <td>@result.Ticket.TakeoffTime</td>
                                                                </tr>

                                                                <tr>
                                                                    <th class="text-left" scope="row"><label data-tag="time"></label></th>
                                                                    <td>@result.Ticket.FlightLength</td>
                                                                </tr>
                                                                <tr>
                                                                    <th class="text-left" scope="row"><label data-tag="airport"></label></th>
                                                                    <td>@result.Ticket.Airports</td>
                                                                </tr>
                                                                <tr>
                                                                    <th class="text-left" scope="row"><label data-tag="stopsh"></label></th>
                                                                    <td>@result.Ticket.Stops</td>
                                                                </tr>
                                                                <tr>
                                                                    <th class="text-left" scope="row"><label data-tag="tickettype"></label></th>
                                                                    <td>@result.Ticket.TicketType</td>
                                                                </tr>

                                                                </tbody>
                                                            </table>

                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal"><label data-tag="close"></label></button>
                                                    <a class="btn btn-primary" href="@result.Ticket.TicketUrl" role="button"><label data-tag="gototicket"></label></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
                    @*<script>
                            document.getElementById("search-bar").style.marginTop = "@Model.SearchBarMarginTop%";
                        </script>*@

            <div class="container my-4">
                <img id="no-result" class="rounded mx-auto d-block" src="@Model.NoResultImg" style="width: 25%; height: auto; margin-bottom: 3%"/>
                <h1 class="text-center">@Model.S</h1>
                <h4 class="text-center">@Model.S2</h4>
            </div>
        }

    </div>
</div>
</div>


<!-- Footer -->
<footer class="py-3 bg-dark">
    <div class="container">





        @*<p class="m-0 text-center text-white">Copyright &copy; Your Website 2018</p>*@
    </div>
    <!-- /.container -->
</footer>


